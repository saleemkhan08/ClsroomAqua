<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/className"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/userTextPadding"
                android:text="Class 10"
                android:textSize="@dimen/price_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/classTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/userTextPadding"
                android:text="Class Teacher : Saleem Khan"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/studentCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Count : 2"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/optionsIconContainer"
            android:background="@drawable/bg_drawable"
            android:src="@drawable/ic_more_vert_black_48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>